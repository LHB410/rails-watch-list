<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(http://source.unsplash.com/1600x900/?movie">
  <div class="container">
    <div class="title-icon">
      <h1><%= @list.name %></h1> <%= link_to icon('fa-solid', 'fa-trash-can'), list_path(@list), method: :delete, data: { confirm: "Are you sure?"} %>
    </div>
    <h4>Let's decide what movie to watch!</h2>
    <%= link_to "Add Film", new_list_bookmark_path(@list), class: "btn btn-light"  %>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card">
        <% if bookmark.photo.attached? %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path bookmark.photo.key, height: 300, crop: :fill %>')">
            <%= bookmark.movie.title %>
          </div>
        <% else %>
          <%= image_tag bookmark.movie.poster_url, size: "200x320", class: "card-img-top" %>
        <% end %>
        <%= bookmark.movie.title %>
        <%= bookmark.movie.overview %>
        <%= bookmark.comment %>
        <%= link_to "Delete film", list_bookmark_path(@list, bookmark), method: :delete, data: { confirm: "Are you sure?"}  %>
      </div>
    <% end %>
  </div>
  <%= link_to "Back", lists_path  %>

</div>




